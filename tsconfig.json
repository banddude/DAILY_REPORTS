{
  "compilerOptions": {
    "target": "ES2016",             // Target widely compatible ES version
    "module": "CommonJS",           // Use CommonJS modules
    "outDir": "./server/dist",       // Specify output directory for compiled JS (good practice)
    "rootDir": "./server/src",       // Specify root directory of source files
    "esModuleInterop": true,        // Still helpful for CJS/ESM interop
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                 
    "skipLibCheck": true
    // "allowImportingTsExtensions": false, // Not needed for CommonJS
    // "noEmit": false // Allow emitting JS files to outDir
  },
  "include": ["server/src/**/*.ts"], 
  "exclude": ["mobile-app/node_modules", "server/dist", "mobile-app"]
}
